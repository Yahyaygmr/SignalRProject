@model CreateMessageDto

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Yazın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input asp-for="FullName" type="text" class="form-control" placeholder="Adınız" />
                        </div>
                        <div>
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon Numaranız" />
                        </div>
                        <div>
                            <input asp-for="Mail" type="email" class="form-control" placeholder="Mail Adresiniz" />
                        </div>
                        <div>
                            <input asp-for="Subject" type="text" class="form-control" placeholder="Konu" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" class="form-control" cols="5" rows="5" placeholder="Mesajınız..."></textarea>

                        </div>
                        <div class="btn_box">
                            <button>
                                Mesaj Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>