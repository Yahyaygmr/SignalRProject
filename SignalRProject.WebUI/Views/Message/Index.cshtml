@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}



<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Mesaj
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div>
                        <input type="text" id="usernameinput" class="form-control" placeholder="Kullanıcı Adınız" />
                    </div>
                    <div>
                        <input type="text" id="messageinput" class="form-control" placeholder="Mesajınız" />
                    </div>
                    <div class="btn_box">
                        <input type="button" id="sendbutton" value="Mesaj Gönder" class="btn btn-warning" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-12">
                        <ul id="messagelist" class="list-group"></ul>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>
