@model CreateMailDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Yeni Kategori Kayıt</div>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="squareInput">Alıcı</label>
                <input type="text" class="form-control input-square" id="squareInput" asp-for="Reciever">
            </div>
            <div class="form-group">
                <label for="squareInput">Konu</label>
                <input type="text" class="form-control input-square" id="squareInput" asp-for="Subject">
            </div>
            <div class="form-group">
                <label for="squareInput">Mesaj</label>
                <textarea class="form-control input-square" cols="5" rows="5" asp-for="Content"></textarea>
              
            </div>
           
        </div>
        <div class="card-action">
            <button class="btn btn-success">Gönder</button>
            <a href="/Category/Index/" class="btn btn-danger">Vazgeç</a>
        </div>

    </form>
</div>
